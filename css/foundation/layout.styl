::-moz-selection
	background: $yellow-light
	color: $grey
	text-shadow: none

::selection
	background: $yellow-light
	color: $grey
	text-shadow: none

*
	box-sizing: border-box

body
	background-color: $white
	color: $black

.wrapper
	width: 100%
	margin: 0 auto

.content
	img
		max-width: 100%
		
.container
	width: $width-total
	margin: 0 auto
	position: relative
	overflow: hidden

header
	width: 100%
	background-color: $red
	padding: 0 0 15px 0
	cursor: pointer

.starter
	width: 100%
	background: $yellow-very-light
	padding: 0

.main
	margin: 0 auto 20px auto

section
	width: 49.5%
	display: inline-block
	padding: 0
	vertical-align: top
	margin-top: 3em // when countdown section is off

.section
	width: 100%
	display: block

footer
	width: 100%
	background-color: $yellow-light
	display: block
	padding: 15px 0
	margin: 1rem 0
	p
		color: $blue
		text-align: center
		margin: 0 auto
		font-size: 1.5rem
		position: relative
		overflow: visible
		a
			text-decoration: underline
			&:link, &:visited
				color: $blue
			&:hover, &:active
				color: $red-light

.footer
	width: 100%
	background-color: $yellow-light
	display: block
	padding: 15px 0

audio
	width: 100%

iframe
	width: 100%
	height: 100%
	border: 0

.map iframe
	height: 500px

hr
	margin: 4em 0
	border-top: 1px solid #eee
