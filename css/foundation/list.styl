.list-social
  list-style: none
  padding: 0
  margin: 0
  text-align: center
  color: $yellow
  li
    font-size: 2.5rem
    font-family: $sans
    font-weight: 200
    margin: 0 2%
    line-height: 1.2em
    display: inline-block
  a
    font-size: 1rem
    vertical-align: top
    &:link, &:visited
      text-decoration: none
      color: $yellow
    &:hover, &:active
      text-decoration: underline

.list-pages
  list-style: none
  margin: 2rem 0
  padding: 0
  text-align: center
  font-size: 1.5rem
  li
    display: inline-block
    margin: 0 1rem
  a
    text-decoration: none
    &:link, &:visited
      color: $blue
    &:hover, &:active
      color: $red

.list-posts
  list-style-type: none
  width: 100%
  margin: 30px 0 60px 0
  padding: 0
  text-align: center
  > li
    width: 30%
    display: inline-block
    margin: 1rem
    box-sizing: border-box
    vertical-align: top
    > p
      display: block
      width: 100%
      text-align: left
  p
    color: $grey
    font-size: 1rem
  a
    text-decoration: none
    &:link, &:visited
      color: $blue
    &:hover, &:active
      color: $red
    &.title
    	font-size: 1.2rem
    	display: block
    	text-decoration: none
    	color: $red-light
    	&:link, &:visited
    		color: $red-light
    	&:active, &:hover
    		background-color: lighten($yellow, 50%)
    	span
    		font-size: .8rem
