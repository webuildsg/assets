.mobile-on
  display: none

@media only screen and (max-width: 1200px)
  .list-posts>li
    width: 45%
@media only screen and (max-width: 960px)
  .container
    width: 95%
  h1
    letter-spacing: 0.4rem
  h2
    font-size: 1.2rem
    padding: 0 10% 0 0
  footer p
    width: 100%
  .mobile-off
    display: none
  .mobile-on
    max-width: 100%
    display: block
  .select-lang li
    width: 14%
  .boxes li
    width: 45%

@media only screen and (max-width: 800px)
  h3
    font-size: 2em
  .explain
    width: 100%
    display: block
  .splash
    display: none
  .select-lang li
    width: 30%

@media only screen and (max-width: 720px)
  h1
    letter-spacing: 0.1rem
  .splash, .post-thumbnail
    display: none
  .list-pages
    font-size: 1rem
    li
      margin: 0 .5rem
  .list-posts>li
    width: 90%
  .chat, .live, .sidebar, .post-content
    width: 100%
  section
    width: 100%
    &:nth-of-type(1)
      border-bottom: 2px solid $blue
    &:nth-of-type(2)
      padding: 40px 0 0 0
  .first
    border-right: none
  footer p
    font-size: 1rem
  .social
    width: 100%
    font-size: 10vw
    padding: 0
    li
      width: 20%
  .input
    padding: .1rem
    width: 210px
    margin-top: 0

@media only screen and (max-width: 600px)
  .graph-label, .graph-bar
    font-size: .9em
  .bar
    height: 32px
  .boxes li
    width: 98%

@media only screen and (max-width: 550px)
  .input
    padding: .5rem
    margin-top: .5rem
  .helptext
    top: -8px
    right: 120px
  .social li p
    display: none

@media only screen and (max-width: 380px)
  h1
    font-size: 18vw
