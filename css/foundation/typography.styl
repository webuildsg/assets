// ----- Fonts ----- //
$sans = 'Open Sans', Helvetica Neue, sans-serif
$serif = 'Roboto Slab', serif

body
	font-size: 16px //12pt
	line-height: 1.25 // 20px
	font-family: $sans
	font-style: normal

h1, h2, h3, h4, h5, h6
	margin: 0

h1
	// we build
	font-size: 10rem
	font-size: 10vw
	font-family: $serif
	font-weight: 700
	color: white
	text-align: center
	letter-spacing: 0.5rem
	line-height: 1.2em
	margin: 0

h2
	// tagline
	font-size: 1.55rem
	text-align: left
	font-family: $sans
	color: $yellow
	font-weight: 200
	margin: 0
	line-height: 1.2em

h3
	// open event and open source
	font-size: 2.5rem
	text-align: center
	font-family: $serif
	color: $blue
	font-weight: 700

p
	font-size: 1.2rem
	color: $red-light
	margin: 0
	text-overflow: ellipsis
	overflow: hidden
	&.tagline
		color: $grey
		font-size: 0.9rem
	&.explain
		color: $blue
		text-align: center
		font-size: 0.9rem
		margin: .5rem 0
		a
			&:link, &:visited
				color: $blue
				text-decoration: underline
			&:hover, &:active
				color: $red
	span
		margin: 0 0 0 10px
		font-size: 0.9rem

a.credit
	padding: 10px 0 40px 0
	display: block
	font-size: 0.8rem
	text-align: center
	text-decoration: none
	&:link, &:visited
		color: $yellow-light
	&:hover, &:active
		color: $red-light

.center
	text-align: center
