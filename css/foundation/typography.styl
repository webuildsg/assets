$sans = 'Helvetica Neue', sans-serif
$serif = 'Roboto Slab', serif

body
	font-size: 16px
	line-height: 1.25
	font-family: $sans
	font-style: normal

h1, h2, h3, h4, h5, h6
	margin: 0

h1
	font-size: 10rem
	font-size: 10vw
	font-family: $serif
	font-weight: 700
	color: $white
	text-align: center
	letter-spacing: 0.5rem
	line-height: 1.2em
	margin: 0

h2
	font-size: 1.55rem
	text-align: left
	font-family: $sans
	color: $yellow
	font-weight: 200
	margin: 0
	line-height: 1.2em

h3
	font-size: 2.5rem
	text-align: center
	font-family: $serif
	color: $blue
	font-weight: 700

p
	font-size: 1.2rem
	color: $red-light
	margin: 0
	text-overflow: ellipsis
	overflow: hidden
	&.tagline
		color: $grey
		font-size: 0.9rem
	&.explain
		color: $blue
		text-align: center
		font-size: 0.9rem
		margin: .5rem 0
		a
			&:link, &:visited
				color: $blue
				text-decoration: underline
			&:hover, &:active
				color: $red
	span
		margin: 0 0 0 10px
		font-size: 0.9rem

code
	background: lighten($grey, 50%)
	padding: 0 .5em

pre
	padding: 1em
	background: #eee
	border-radius: 5px

.subtitle
	color: $grey
	text-align: center
	display: block
	margin: 1rem 0
	width: 100%
	overflow: hidden
	font-size: 1.3rem
	text-overflow: ellipsis

.important
	font-size: 2.5rem
	font-family: $serif
	color: $blue
	font-weight: 700
	text-align: left

a.credit
	padding: 10px 0 40px 0
	display: block
	font-size: 0.8rem
	text-align: center
	text-decoration: none
	&:link, &:visited
		color: $yellow-light
	&:hover, &:active
		color: $red-light

.title
	font-size: 1.2rem
	display: block
	text-decoration: none
	color: $red-light
	&:link, &:visited
		color: $red-light
	&:active, &:hover
		background-color: lighten($yellow, 50%)
	span
		font-size: .8rem

.center
	text-align: center

.footer p
	color: $blue
	text-align: center
	margin: 0 auto
	width: 100%
	font-size: 1.5rem

.by
	color: $blue
	margin: 1rem 0 2rem 0
	a
		text-decoration: none
		&:link, &:visited
			color: $blue
			text-decoration: underline
		&:hover, &:active
			color: $red

.by
	font-size: .9rem
	text-align: center

.note
	color: $red-light
	display: inline-block
	font-size: 0.7em
	margin: 0.3em 0px
	border-radius: 0.5em
	text-transform: uppercase
	opacity: 0.7

.graph-name
	color: #444
	font-size: .9em
	margin: .5em 0
	text-align: center

.big
	color: $blue
	font-size: 4em

.sm
	color: $grey
	font-size: 1em

.info
	color: $grey
	text-align: center
	a
		color: $grey

.explain
	color: #444
	text-align: left
	border: 1px solid #ccc
	border-radius: 20px
	padding: .5em
	width: 48%
	margin: 1.5em .5%
	display: inline-block
	a
		color: $grey
