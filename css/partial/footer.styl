.social
  font-family: 'Social'
  font-size: 3rem
  font-size: 4vw
  margin: 0 auto 1rem
  padding: 0 calc(50% - 52%/2)
  li
    width: 22%
    text-align: center
    display: inline-block
    margin: 0
    padding: 0
    p
      font-size: 1rem
      color: $grey
      font-family: $sans
  a
    color: $blue
    text-decoration: none
    font-size: 5rem
    &:hover, &:active
      color: $red
      -webkit-transform: scale(1.2, 1.2)
      -moz-transform: scale(1.2, 1.2)
      -ms-transform: scale(1.2, 1.2)
      -o-transform: scale(1.2, 1.2)
      transform: scale(1.2, 1.2)
