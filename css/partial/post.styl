.post-thumbnail
  display: inline-block
  float: left
  width: 20%
  margin: .2rem 0
  img
    max-width: 100%
    margin-bottom: 1rem

.post-content
  display: inline-block
  float: right
  width: 75%
  padding-bottom: 1rem
  text-align: left
  p
    display: block
    margin-bottom: 1rem

.post, .post-content
  p
    color: $grey
    font-size: 0.9rem
    margin: 1rem 0
  a
    color: $blue
    text-decoration: none
    &:link, &:visited
      color: $blue
    &:hover, &:active
      color: $red
  p
    color: $grey
    font-size: .9rem
    margin: 1rem 0
  ul, ol
    padding: 0
    margin: .5rem 0 0 0
    li
      display: inline
      color: $grey
      font-size: .9rem
      margin: 0 .2rem
      padding: 0
      &:before
        content: 'o'
        font-size: .8rem
        padding: 0 .3rem 0 0
        line-height: .3rem
        color: lighten($grey, 45%)
      a
        padding: 0
        display: inline
        margin: 0
        color: $grey !important
        &:hover
          text-decoration: underline

.page-content
  margin: 2rem 0
  overflow: hidden
