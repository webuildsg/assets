box-shadow-mixin($color, $xoffset, $yoffset, $blur)
  -webkit-box-shadow: $color $xoffset $yoffset $blur
  -moz-box-shadow: $color $xoffset $yoffset $blur
  box-shadow: $color $xoffset $yoffset $blur

border-radius($radius)
  -webkit-border-radius: $radius
  -moz-border-radius: $radius
  -ms-border-radius: $radius
  -o-border-radius: $radius
  border-radius: $radius

rotate-mixin($angle)
  -webkit-transform: rotate($angle)
  -moz-transform: rotate($angle)
  -ms-transform: rotate($angle)
  -o-transform: rotate($angle)
  transform: rotate($angle)

transition-duration($time)
  -webkit-transition-duration: $time
  -moz-transition-duration: $time
  -o-transition-duration: $time
  transition-duration: $time

scale-mixin($amount)
  -webkit-transform: scale($amount, $amount)
  -moz-transform: scale($amount, $amount)
  -ms-transform: scale($amount, $amount)
  -o-transform: scale($amount, $amount)
  transform: scale($amount, $amount)

tranition-mixin($which, $time, $how)
  -webkit-transition: $which $time $how
  -moz-transition: $which $time $how
  -ms-transition: $which $time $how
  -o-transition: $which $time $how

animation-mixin($name, $time, $timing, $iteration)
  -webkit-animation: $name $time $timing $iteration
  -moz-animation: $name $time $timing $iteration
  -o-animation: $name $time $timing $iteration
  animation: $name $time $timing $iteration
