{
  "name": "webuildsg-assets",
  "version": "1.0.0",
  "description": "common logo, icons and css for webuild.sg related sites",
  "main": "index.html",
  "scripts": {
    "build": "stylus css/style.styl --compress",
    "clean": "rm css/style.css",
    "deploy": "git push origin gh-pages",
