    "css",
    "stylus",
    "logo",
    "favicon"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webuildsg/assets/issues"
  },
  "homepage": "https://github.com/webuildsg/assets#readme",
  "devDependencies": {
    "csslint": "^0.10.0",
    "http-server": "^0.8.5",
    "parallelshell": "latest",
    "stylus": "^0.53.0"
  }
}
